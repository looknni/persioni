#}
#nmapmacru $mangle maa maamap
#nmapmacru $mangle mbb mbbmap
#nmapmacru $mangle mcc mccmap
#nmapmacru $mangle mdd mddmap
#nmapmacru $mangle mee meemap
unset na nb nc nd ne raw nat filter mangle pa pb pc pd
nft list ruleset
fi

if [ "$1" == "iptables" ];then
	filter='filter'
	mangle='mangle'
	prerouting='PREROUTING'
	input='INPUT'
	forward='FORWARD'
	output='OUTPUT'
	postrouting='POSTROUTING'
function inul(){
	iptables -t $1 -F
	iptables -t $1 -X
	iptables -t $1 -Z
	ip6tables -t $1 -F
	ip6tables -t $1 -X
	ip6tables -t $1 -Z
}
inul $filter
inul $mangle
function ifi(){
	iptables -t $filter --new $2
	iptables -t $filter -A $1 -j $2
	ip6tables -t $filter --new $2
	ip6tables -t $filter -A $1 -j $2
}
ifi $input FAA
ifi $forward FBB
ifi $output FCC
function ima(){
	iptables -t $mangle --new $2
	iptables -t $mangle -A $1 -j $2
	ip6tables -t $mangle --new $2
	ip6tables -t $mangle -A $1 -j $2
}
ima $prerouting MAA
ima $input MBB
ima $forward MCC
ima $output MDD
ima $postrouting MEE
unset filter prerouting input forward output postrouting mangle
fi
